<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lay_header"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvw_pray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:padding="15dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center">


            <TextView
                android:id="@+id/doa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:textSize="20sp"
                android:text="أَسْتَغْفِرُ اللًّهَ , أَسْتَغْفِرُ اللًّهَ , أَسْتَغْفِرُ اللًّهَ"/>
            <TextView
                android:id="@+id/artidoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:text=" '' Aku mohon ampun kepada Allah, Aku mohon ampun kepada Allah, Aku mohon ampun kepada Allah ''"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>








</LinearLayout>

